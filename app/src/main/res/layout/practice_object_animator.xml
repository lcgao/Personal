<?xml version="1.0" encoding="utf-8"?>
<com.lcgao.personal.widget.ObjectAnimatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B">

    <com.lcgao.personal.widget.ObjectAnimatorView
        android:id="@+id/objectAnimatorView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:text="开始动画"
        android:textSize="16sp" />

</com.lcgao.personal.widget.ObjectAnimatorLayout>
